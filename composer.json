{
    "name": "zestic/asset-server",
    "description": "Production-ready GraphQL API template with authentication, database migrations, and modern PHP tooling",
    "license": "Apache-2.0",
    "type": "project",
    "keywords": [
        "api",
        "mezzio",
        "php",
        "frankenphp",
        "docker"
    ],
    "homepage": "https://github.com/zestic/asset-server",
    "support": {
        "issues": "https://github.com/zestic/asset-server/issues",
        "source": "https://github.com/zestic/asset-server"
    },
    "require": {
        "php": "^8.4",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "actiophp/actio": "dev-main",
        "adriengras/pkce-php": "*",
        "composer/package-versions-deprecated": "^1.11.99.5",
        "laminas/laminas-component-installer": "^3.5",
        "laminas/laminas-config-aggregator": "^1.18",
        "laminas/laminas-diactoros": "^3.6",
        "laminas/laminas-servicemanager": "^4.0",
        "laminas/laminas-stdlib": "^3.20",
        "league/flysystem": "^3.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "league/glide": "^3.0.1",
        "league/mime-type-detection": "^1.13",
        "mezzio/mezzio": "^3.20.1",
        "mezzio/mezzio-cors": "^1.0",
        "mezzio/mezzio-fastroute": "^3.11.0",
        "mezzio/mezzio-helpers": "^5.17",
        "middlewares/access-log": "*",
        "middlewares/uuid": "*",
        "monolog/monolog": "*",
        "nesbot/carbon": "^3.0",
        "ramsey/uuid": "^4.7",
        "zestic/flysystem2-component": "^0.4.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "*",
        "filp/whoops": "^2.15.4",
        "friendsofphp/php-cs-fixer": "*",
        "laminas/laminas-development-mode": "^3.13.0",
        "league/flysystem-memory": "^3.13",
        "mezzio/mezzio-tooling": "^2.10.1",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-phpunit": "*",
        "phpunit/phpunit": "^10.5.45",
        "roave/security-advisories": "dev-master"
    },
    "conflict": {
        "amphp/dns": "<2.4.0",
        "amphp/socket": "<2.3.1",
        "php-di/php-di": "<7.0.9"
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:zestic/asset-server.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Application\\": "src/Application/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Integration\\": "tests/Integration/",
            "Unit\\": "tests/Unit/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "laminas/laminas-component-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": "@clear-config-cache",
        "post-update-cmd": "@clear-config-cache",
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "cs-fix": "./vendor/bin/php-cs-fixer fix",
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "enable-codestandard": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
        "generate:requests": "vendor/bin/generate-requests",
        "generate:resolvers": "vendor/bin/generate-resolvers",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "phpstan:baseline": "phpstan analyse --generate-baseline",
        "phpstan:clear-cache": "phpstan clear-result-cache",
        "restart": "docker compose restart",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "docker compose up -d"
        ],
        "stop": "docker compose down",
        "test": "docker compose exec asset-server vendor/bin/phpunit --colors=always --testsuite=all",
        "test:auth-e2e": "docker compose exec asset-server vendor/bin/phpunit --colors=always --filter testHappyPathForNewUser tests/Integration/AuthenticationFlowTest.php",
        "test:coverage": "docker compose exec asset-server vendor/bin/phpunit --colors=always --coverage-clover clover.xml",
        "test:integration": "docker compose exec asset-server vendor/bin/phpunit --colors=always --testsuite=integration",
        "test:unit": "docker compose exec asset-server vendor/bin/phpunit --colors=always --testsuite=unit"
    },
    "scripts-descriptions": {
        "clear-config-cache": "Clears merged config cache. Required for config changes to be applied.",
        "cs-check": "Check coding standards using PHPCS from vendor with parallel processing disabled for reliability.",
        "cs-fix": "Fix coding standards using PHPCBF from vendor with parallel processing disabled for reliability.",
        "phpstan": "Run static analysis tool PHPStan.",
        "phpstan:baseline": "Generate PHPStan baseline file.",
        "phpstan:clear-cache": "Clear PHPStan result cache.",
        "restart": "Restart Docker containers",
        "seed": "Run database seeds with Phinx",
        "seed:create": "Create a new database seed with Phinx",
        "serve": "Start the FrankenPHP development server with Docker Compose",
        "stop": "Stop the Docker Compose services",
        "test": "Run all tests (unit and integration) with PHPUnit",
        "test:auth-e2e": "Run end-to-end authentication flow test with magic link OAuth2 integration",
        "test:integration": "Run only integration tests with PHPUnit",
        "test:unit": "Run only unit tests with PHPUnit"
    }
}
