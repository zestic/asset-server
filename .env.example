# Application Environment
APP_ENV=development

# PostgreSQL Database Configuration (for Docker container)
POSTGRES_DB=zestic_api
POSTGRES_USER=zestic
POSTGRES_PASSWORD=password1

# Application Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=zestic_api
DB_USER=zestic
DB_PASSWORD=password1
DB_SCHEMA=public

# External Services
WEAVIATE_URL=http://weaviate:8080

# Authentication Configuration
AUTH_PRIVATE_KEY=/path/to/private.key
AUTH_ENCRYPTION_KEY=your-encryption-key-here
AUTH_ACCESS_TOKEN_TTL=60
AUTH_LOGIN_TTL=10
AUTH_REFRESH_TOKEN_TTL=10080
AUTH_REGISTRATION_TTL=1440

# Magic Link Configuration
MAGIC_LINK_WEB_APP_URL=http://localhost:3000

# FrankenPHP Configuration
SERVER_NAME=:80
CADDY_GLOBAL_OPTIONS=
FRANKENPHP_CONFIG=

# Xdebug Configuration (Development)
XDEBUG_MODE=debug,develop
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_START_WITH_REQUEST=yes
XDEBUG_IDEKEY=VSCODE
